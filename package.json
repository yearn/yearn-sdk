{
  "name": "@yfi/sdk",
  "author": "yearn.finance",
  "description": "SDK for the yearn.finance platform",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsdx build",
    "start": "tsdx watch",
    "test": "tsdx test",
    "test:offline": "tsdx test -t '^(?!.*network)'",
    "lint": "tsdx lint src test",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "abi": "typechain --target ethers-v5 --outDir src/contracts \"abi/*.json\"",
    "docs": "yarn typedoc --media media --out docs src/index.ts",
    "prebuild": "yarn abi",
    "prestart": "yarn abi",
    "precommit": "yarn lint && yarn docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint src test"
    }
  },
  "module": "dist/sdk.esm.js",
  "size-limit": [
    {
      "path": "dist/sdk.cjs.production.min.js",
      "limit": "20 KB"
    },
    {
      "path": "dist/sdk.esm.js",
      "limit": "20 KB"
    }
  ],
  "peerDependencies": {
    "ethers": "^5.0.26"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/array.prototype.flat": "^1.2.1",
    "@types/jest": "^26.0.20",
    "@types/ms": "^0.7.31",
    "@types/node-fetch": "^2.5.8",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "ethers": "^5.0.26",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "np": "^7.2.0",
    "size-limit": "^4.9.1",
    "ts-jest": "^26.4.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typechain": "^4.0.1",
    "typedoc": "^0.20.16",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "printWidth": 85,
    "semi": true,
    "singleQuote": false
  },
  "dependencies": {
    "bignumber.js": "^9.0.1",
    "fromentries": "^1.3.2",
    "ms": "^2.1.3",
    "node-fetch": "^2.6.1",
    "p-throttle": "^4.0.0"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.14.0",
    "**/@typescript-eslint/parser": "^4.14.0",
    "**/ts-jest": "^26.4.4",
    "**/typescript": "^4.1.3",
    "**/jest": "^26.6.3"
  }
}
